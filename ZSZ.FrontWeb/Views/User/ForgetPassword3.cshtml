
@{
    ViewBag.Title = "输入新密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="headertwo clearfloat" id="header">
    <a href="javascript:history.go(-1)" class="fl box-s"><i class="iconfont icon-arrow-l fl"></i></a>
    <p class="fl">输入新密码</p>
</div>

<div class="modify clearfloat" id="main">
    <ul>
        <li class="clearfloat">
            <input type="text" name="" id="password" value="" placeholder="请输入新密码" class="sname snametwo" />
        </li>
        <li class="clearfloat">
            <input type="text" name="" id="password2" value="" placeholder="请再次输入新密码" class="sname snametwo" />
        </li>
    </ul>
    <a href="#" id="btnNext" class="pay-btn clearfloat">
        确认修改
    </a>
</div>



@section FooterScript
{
    <script type="text/javascript" src="~/js/jquery.leanModal.min.js"></script>
    <script type="text/javascript">
        $(function() {
            $("#btnNext").click(function() {
                $.ajax({
                    url: '/User/ForgetPassword3',
                    type: 'post',
                    dataType: 'json',
                    data: { password: $("#password").val(), password2: $("#password2").val() },
                    success:function(msg) {
                        if (msg.status === "ok") {
                            window.location = "/User/ForgetPassword4";
                        } else {
                            alert(msg.msg);
                        }
                    },
                    error:function() {
                        alert("网络请求失败");
                    }
                });
            });
        });
    </script>

}
