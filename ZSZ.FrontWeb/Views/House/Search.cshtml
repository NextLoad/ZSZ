@using ZSZ.Web.Common
@model HouseSearchViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderScript
{
    <script type="text/javascript" src="~/js/menu.js"></script>

}

<div class="headertwo clearfloat" id="header">
    <a href="javascript:history.go(-1)" class="fl box-s"><i class="iconfont icon-arrow-l fl"></i></a>
    <p class="fl">@Model.City.Name</p>
    <a href="javascript:history.go(-1)" class="fr"><i class="iconfont icon-sousuo fl"></i></a>
</div>
<div class="clearfloat" id="main">
    <div class="menu-list clearfloat am-sharetwo">
        <ul class="yiji" id="oe_menu">
            <li>
                <a href="#" class="inactive">区域<i></i></a>
                <ul style="display: none">
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.RemoveQueryString(Request.QueryString,"regionId"))">全部</a></li>

                    @foreach (var region in Model.Regions)
                    {
                        <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString, "regionId", region.Id.ToString()))">@region.Name</a></li>
                    }


                </ul>
            </li>
            <li>
                <a href="#" class="inactive">租金<i></i></a>
                <ul style="display: none">
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.RemoveQueryString(Request.QueryString,"monthRent"))">全部</a></li>
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"monthRent","*-500"))">500元以下</a></li>
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"monthRent","501-1000"))">501-1000元</a></li>
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"monthRent","1001-2000"))">1001-2000元</a></li>
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"monthRent","2001-*"))">2001元以上</a></li>
                </ul>
            </li>
            <li>
                <a href="#" class="inactive">排序<i></i></a>
                <ul style="display: none">
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"OrderByType","monthRent"))">价格</a></li>
                    <li><a href="~/House/Search?@Html.Raw(WebCommonHelper.UpdateQueryString(Request.QueryString,"OrderByType","area"))">面积</a></li>
                </ul>
            </li>
        </ul>
    </div>

    @*<div id="oe_overlay" class="oe_overlay"></div>*@

    <div class="recom clearfloat recomtwo">
        <div class="content clearfloat box-s">
            @foreach (var house in Model.Houses)
            {
                <div class="list clearfloat fl box-s">
                    <a href="~/House/Index/@house.Id">
                        <div class="tu clearfloat">
                            <span></span>
                            <img src="upload/list-tu.jpg" />
                        </div>
                        <div class="right clearfloat">
                            <div class="tit clearfloat">
                                <p class="fl">@(house.CommunityName)</p>
                                <span class="fr">@(house.MonthRent)<samp>元/月</samp></span>
                            </div>
                            <p class="recom-jianjie">@(house.RoomTypeName) | @(house.Area)m² | @(house.DecorateStatusName)</p>
                            <div class="recom-bottom clearfloat">
                                <span><i class="iconfont icon-duihao"></i>随时住</span>
                                <span><i class="iconfont icon-duihao"></i>家电齐全</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@section FooterScript
{
    <script type="text/javascript" src="~/js/psong.js"></script>

}
