@model ZSZ.DTO.PermissionDTO[]
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="~/Role/AddRole" method="post" id="formAdd">
    角色名称：<input type="text" name="name" /><br />
    @foreach (var perm in @Model)
    {
        <input type="checkbox" id="@perm.Id" name="permIds" value="@perm.Id"/><label for="@perm.Id">@perm.Name</label>
    }
    <br />
    <input type="button" value="添加" id="btnAddRole" />
</form>

@section FooterScript
{
    <script type="text/javascript">
        $(function() {
            $("#btnAddRole").click(function() {
                var dataForm = $("#formAdd").serializeArray();
                $.ajax({
                    url:"/Role/AddRole",
                    type: "post",
                    data: dataForm,
                    dataType: "json",
                    success: function(msg) {
                        if (msg.status == "ok") {
                            alert("ok");
                        } else {
                            alert("error:" + msg.msg);
                        }
                    },
                    error: function() {
                        alert("请求失败！");
                    }
                });
            });
        });
    </script>
}

